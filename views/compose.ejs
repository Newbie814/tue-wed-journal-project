<%- include('partials/header.ejs'); -%>
<h1>Compose</h1>
<form class="" action="/compose.ejs" method="post">
  <div class="form-group">
    <label >Title:</label>
    <input
      type="text"
      class="form-control"
      name="titleLine"
      aria-describedby="emailHelp"
      placeholder="Enter Title"
    />
  </div>
  <div class="form-group">
    <label ">Entry:</label>
    <textarea
      type="text"
      class="form-control"
      name="postBody"
      placeholder="Journal Entry"
      rows="10"
      style="margin-bottom: 30px"
      method="post"
    >
    </textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary" style="padding: 10px">
    Publish
  </button>
</form>
<%- include('partials/footer.ejs'); -%>

